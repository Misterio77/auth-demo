{% extends "base" %}

{% block title %}Log in{% endblock title %}
{% block description %}Log in to start pasting{% endblock title %}

{% block content%}

{% set redir = redir | default(value="") | urlencode_strict %}

<article class="slim">
  <header>
    <hgroup>
      <h1>Log in</h1>
      <h2>Need an account? <a href="/register?redir={{ redir }}">Register</a></h2>
    </hgroup>
  </header>
  <form method="post" action="/login?redir={{ redir }}">
    <label>
      Username
      <input type="text" name="username" autocomplete="username" required autofocus />
    </label>
    <label>
      Password
      <input type="password" name="password" autocomplete="current-password" required />
    </label>
    <button>
      Log in
    </button>
  </form>
</article>

{% endblock content %}
